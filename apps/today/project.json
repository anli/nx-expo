{
  "name": "today",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/today/src",
  "projectType": "application",
  "tags": ["type:app"],
  "// targets": "to see all targets run: nx show project today --web",
  "targets": {
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["tsc -p tsconfig.app.json --noEmit"],
        "forwardAllArgs": false,
        "description": "Type check with tsc"
      }
    },
    "bundle": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["bundle"],
        "parallel": false
      }
    },
    "gem": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["gem"],
        "parallel": false
      }
    },
    "pod-install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["npx pod-install"],
        "parallel": false
      }
    },
    "build-install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["bundle install"],
        "parallel": false
      }
    },
    "build-ios": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/today",
        "commands": ["bundle exec fastlane ios build"],
        "parallel": false
      }
    }
  }
}
